# PLOS - Personal Life Operating System
# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# GEMINI API (Google AI)
# ============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro-latest

# ============================================================================
# POSTGRESQL DATABASE
# ============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=plos
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=devpassword

# ============================================================================
# KAFKA MESSAGE BROKER
# ============================================================================
KAFKA_BROKERS=kafka:9092
KAFKA_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1

# ============================================================================
# API GATEWAY (KONG)
# ============================================================================
KONG_DATABASE=postgres
KONG_PG_HOST=postgres
KONG_PG_USER=postgres
KONG_PG_PASSWORD=devpassword
KONG_PG_DATABASE=kong

# ============================================================================
# SERVICE PORTS
# ============================================================================
API_GATEWAY_PORT=8000
CONTEXT_BROKER_PORT=8001
JOURNAL_PARSER_PORT=8002
KNOWLEDGE_SYSTEM_PORT=8003
MOOD_EXTRACTOR_PORT=8010
HEALTH_EXTRACTOR_PORT=8011
NUTRITION_EXTRACTOR_PORT=8012
EXERCISE_EXTRACTOR_PORT=8013
WORK_EXTRACTOR_PORT=8014
HABIT_EXTRACTOR_PORT=8015
INSIGHT_AGENT_PORT=8020
SCHEDULING_AGENT_PORT=8021
MOTIVATION_AGENT_PORT=8022
REFLECTION_AGENT_PORT=8023
CORRELATION_ENGINE_PORT=8030
GOALS_TASKS_PORT=8031
CALENDAR_PORT=8032
NOTIFICATIONS_PORT=8033

# ============================================================================
# FRONTEND
# ============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_PORT=16686
KAFKA_UI_PORT=8080

# ============================================================================
# SECURITY (CHANGE IN PRODUCTION!)
# ============================================================================
JWT_SECRET=change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600



# Email notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Twilio for SMS (optional)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890
